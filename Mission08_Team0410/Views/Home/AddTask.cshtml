@{
    ViewData["Title"] = "Add Task";
}

<div class="text-center">
    <h1 class="display-4">Add a task to your own time management matrix!</h1>
</div>
<!--This is a note to practie github-->

<div class="col-4">
    <form method="post">
        <input type="hidden" asp-for="TaskId" />

        <label asp-for="Task">New Task</label>
        <input asp-for="Task" required />
        <br />
        <label asp-for="DueDate" type="date">Due Date</label>
        <input asp-for="DueDate" />
        <br />
        <label asp-for="Quadrant">Quadrant</label>
        <select asp-for="Quadrant">
            <option value="1">Important / Urgent</option>
            <option value="2">Important / Not Urgent</option>
            <option value="3">Not Important / Urgent</option>
            <option value="4">Not Important / Not Urgent</option>
        </select>
        <br />
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select>
        <br />
        <label asp-for="Completed">Completed</label>
        <select asp-for="Completed">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />

        <button class="btn btn-info" type="submit">Add New Task</button>
    </form>
</div>


