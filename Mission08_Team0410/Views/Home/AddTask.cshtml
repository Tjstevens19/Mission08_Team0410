@{
    ViewData["Title"] = "Add Task";
}

<div class="text-center">
    <h1 class="display-4">Add a task to your own time management matrix!</h1>
</div>

<form method="post">
    <input type="hidden" asp-for="TaskId" />

    <label asp-for="Task">New Task</label>
    <input asp-for="Task" required/>
    <br />
    <label asp-for="DueDate" type="date" id="taskDate" >Due Date</label>
    <input asp-for="DueDate" />
    <br />
    <label asp-for="Quadrant">Quadrant</label>
    <select asp-for="Quadrant">
        <option value="1">Important / Urgent</option>
        <option value="2">Important / Not Urgent</option>
        <option value="3">Not Important / Urgent</option>
        <option value="4">Not Important / Not Urgent</option>
    </select>
    <br />
    <label asp-for="Category">Category</label>
    <select asp-for="Category">
        <option value="H">Home</option>
        <option value="S">School</option>
        <option value="W">Work</option>
        <option value="C">Church</option>
    </select>
    <br />
    <label asp-for="Completed">Completed</label>
    <select asp-for="Completed">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />

    <button type="submit">Add New Task</button>
</form>

