@using System;

@{
    ViewData["Title"] = "Add Task";
}

@model Mission08_Team0410.Models.Task
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <div class="text-center">
            <h1 class="display-4">Add a task to your own time management matrix!</h1>
        </div>
    </div>
    <div class="col-2"></div>
</div>

<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <form method="post">
            <input type="hidden" asp-for="TaskId" />

            <label asp-for="TaskName">New Task</label>
            <input asp-for="TaskName" required />
            <br />
            <label asp-for="DueDate">Due Date</label>
            <input asp-for="DueDate" type="date" placeholder="@System.DateTime.Today.ToString("yyyy-MM-dd")" />
            <br />
            <label asp-for="Quadrant">Quadrant</label>
            <select asp-for="Quadrant">
                <option value="1">Important / Urgent</option>
                <option value="2">Important / Not Urgent</option>
                <option value="3">Not Important / Urgent</option>
                <option value="4">Not Important / Not Urgent</option>
            </select>
            <br />
            <select asp-for="CategoryId">
                <option value="">Select a Category</option>
                @foreach (Category c in ViewBag.Categories)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            </select>
            <br />
            <label asp-for="Completed">Completed</label>
            <select asp-for="Completed">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
            <br />

            <button class="btn btn-info" type="submit">Add New Task</button>
        </form>
    </div>
    <div class="col-5"></div>
</div>
